/* Roboto font */
@import url('https://fonts.googleapis.com/css?family=Roboto:300,400,500');

/*
  Variables
*/

blue = #125688
offwhite = #fafafa
lightgrey  = #EDEEED
lightgray = lightgrey // OH Canada!

html
  font-size 10px
  font-family 'Roboto', sans-serif

p
  font-size 1.6rem
  line-height 1.5
  margin 0 0 20px 0

h1
  text-align center
  background white
  font-weight 900
  font-size 7rem
  margin 0
  letter-spacing -1px
  a
    color #999
    text-decoration none
    &:focus
      outline 0
